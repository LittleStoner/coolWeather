<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.myt.coolweather.WeatherActivity">
    <ImageView
        android:id="@+id/biying_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:fitsSystemWindows="true"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <include layout="@layout/title"></include>
           <include layout="@layout/now"></include>
           <include layout="@layout/forcast"></include>
           <include layout="@layout/aqi"></include>
           <include layout="@layout/suggestion"></include>
       </LinearLayout>
   </ScrollView>

</FrameLayout>
